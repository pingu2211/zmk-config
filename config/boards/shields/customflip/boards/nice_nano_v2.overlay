/ {
    chosen {
        zmk,backlight = &backlight;
    };
    &pwm0 {
        status = "okay";
        ch0-pin = <15>;
    };
    backlight: pwmleds {
        compatible = "pwm-leds";
        label = "Backlight LEDs";
        pwm_led_0 {
            pwms = <&pwm0 15>;
            label = "Backlight LED 0";
        };
    };
};
